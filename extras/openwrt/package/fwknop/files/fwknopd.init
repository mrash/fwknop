START=60

FWKNOPD_BIN=/usr/sbin/fwknopd

start()
{
	$FWKNOPD_BIN
}

stop()
{
	$FWKNOPD_BIN -K
}

restart()
{
    stop;
    sleep 1;
    start;
}

reload()
{
	$FWKNOPD_BIN -R
}
